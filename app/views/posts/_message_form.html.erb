<% if logged_in? %>  
	<%= form_tag(:controller => "posts", :action => "create") do %>  
	  <%= label_tag(:message, "What are you doing?") %><br />  
	  <%= text_area_tag(:message, nil, :size => "44x6", :id => "txt_message") %><br />  
	  <%= submit_tag("Post", :id => "submit_message") %>  
	<% end %>
<% end %>